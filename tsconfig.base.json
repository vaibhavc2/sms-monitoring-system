{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@sms/server": ["./apps/server/*"],
      "@sms/client": ["./apps/client/*"],
      "@sms/transactional": ["./libs/transactional/*"]
    }
  },
  "exclude": ["node_modules"]
}
